<Window x:Class="TextToSpeechV3.Views.SnippingTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextToSpeechV3.Views"
		xmlns:i="clr-n"
        mc:Ignorable="d"
        Title="SnippingTool" Height="300" Width="300" AllowsTransparency="True" Opacity="0.5" WindowStyle="None"
		WindowStartupLocation="CenterScreen" WindowState="Maximized" Topmost="True">
	<Canvas x:Name="canvas" MouseDown="{Binding MouseDownCommand}" MouseMove="{Binding MouseMoveCommandMethod}" MouseUp="{Binding MouseUpCommandMethod}" Background="White">
		<!--<Rectangle Visibility="{Binding RectabgleVisibility}" Canvas.Top="{Binding Y}" Canvas.Left="{Binding X}" 
				   Height="{Binding Height}" Width="{Binding Width}"/>-->
	</Canvas>
</Window>
