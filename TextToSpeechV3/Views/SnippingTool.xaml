<Window x:Class="TextToSpeechV3.Views.SnippingTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextToSpeechV3.Views"
		xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="SnippingTool" Height="600" Width="600" Left="{Binding ScreenPosition.X}" Top="{Binding ScreenPosition.Y}"
		WindowState="Normal" Topmost="True"><!--AllowsTransparency="True" Opacity="0.5" WindowStyle="SingleBorderWindow"-->
	<!--Canvas x:Name="canvas" MouseDown="{Binding MouseDownCommand}" MouseMove="{Binding MouseMoveCommandMethod}" MouseUp="{Binding MouseUpCommandMethod}" Background="White">-->
	<Canvas x:Name="canvas" Background="White" MouseDown="canvas_MouseDown">
		<i:Interaction.Triggers>
			<i:EventTrigger EventName="MouseDown">
				<i:InvokeCommandAction Command="{Binding MouseDownCommand}"/>
			</i:EventTrigger>
		</i:Interaction.Triggers>
		<Rectangle x:Name="rect" Visibility="{Binding RectabgleVisibility}" Canvas.Top="{Binding Y}" Canvas.Left="{Binding X}" Height="{Binding Height}" Width="{Binding Width}"
				   Fill="Crimson" Opacity="1"/>
		<!--<Rectangle Width="50" Height="50" Fill="AliceBlue" Opacity="1" Canvas.Top="10" Canvas.Left="10"></Rectangle>-->
	</Canvas>
</Window>
